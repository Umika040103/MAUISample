<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ProgressRing"
           >
    <GraphicsView x:Name="RingBackgroundView"
                          WidthRequest="{Binding WidthRequest, Source={RelativeSource AncestorType={x:Type Grid}}}"
                          HeightRequest="{Binding HeightRequest, Source={RelativeSource AncestorType={x:Type Grid}}}"/>
    <GraphicsView x:Name="RingProgressView"
                          WidthRequest="{Binding WidthRequest, Source={RelativeSource AncestorType={x:Type Grid}}}"
                          HeightRequest="{Binding HeightRequest, Source={RelativeSource AncestorType={x:Type Grid}}}"/>
</Grid>